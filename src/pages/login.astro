---
import Layout from "../layouts/Layout.astro"
import Logo from "../img/logotipo.png"
---

<Layout title="iniciar sesión">
    <main>
        <form action="" method="post">
            <fieldset>
                <a href="/"><img src={Logo.src} alt="logotipo"></a>
                <h1>Iniciar sesión</h1>
                <label for="mail">Correo electrónico</label>
                <input type="email" id="mail" required>  
                <label for="contraseña">Contraseña</label>
                <input type="password" id="contraseña" required>
                <button type="submit">Comenzar</button>
                <div id="enlaces">
                    <a href="/reset"><p>He olvidado mi contraseña</p></a>
                    <a href="register"><p>Aún no tengo cuenta</p></a>
                </div>
            </fieldset>
        </form>
    </main>
</Layout>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

    main{
        display: flex;
        justify-content: center;
        width: 100%;
        height: 98vh;
    }

    form{
        position: relative;
        width: 45%;
        height: 25%;
        top: 25%;
    }

    fieldset{
        display: flex;
        justify-content: center;
        flex-direction: column;
        width: 100%;
        height: 50vh;
        border-radius: 25px;
        border: none;
        text-align: center;
        border: 1px solid violet;
        outline: none;
        font-weight: 300;
        background: #902576;
        color: #fff;
        font-family: "Rajdhani", sans-serif;
        font-size: 1.5em;
        padding: 12px 10px 12px 48px;
        animation: parpadeo 3s ease infinite;
    }

    @keyframes parpadeo{
        0%{
            box-shadow: none;
        }
        50%{
            box-shadow: -5px -5px 15px #f08ae3, 5px 5px 15px #f08ae3;
        }
        100%{
            box-shadow: none;
        }
    }

    fieldset img{
        width: 25%;
        position: absolute;
        top: -16.5vh;
        left: 37vh;
        transition: all 0.5s ease-in;
    }

    fieldset img:hover{
        scale: 1.2;
        rotate: -10deg;
    }

    fieldset label{
        text-transform: uppercase;
        font-weight: 200;
        margin-bottom: 10px;
        margin-top: 20px;
    }

    fieldset input{
        text-align: center;
        width: 75%;
        margin-left: 10%;
        padding: 15px;
        border-radius: 25px;
        border: none;
    }

    fieldset button{
        background: linear-gradient(to bottom, #f08ae3, #5ac2a3 50%);
        width: 15%;
        padding: 10px;
        border-radius: 10px;
        margin-left: 37vh;
        margin-top: 20px;
        font-weight: bold;
        color: #fff;
        font-size: 0.7em;
        border: none;
    }

    fieldset button:hover{
        scale: 1.1;
        cursor: grab;
    }

    #enlaces{
        display: flex;
        justify-content: center;
    }

    #enlaces a{
        color: #fff;
        font-size: 0.7em;
        margin: 25px;
        text-decoration: none;
        transition: all 0.2s ease-in;
    }

    #enlaces a:hover{
        scale: 1.1;
        text-decoration: underline;
        font-weight: bold;
    }
</style>