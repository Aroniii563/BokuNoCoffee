---
import Layout from '../layouts/Layout.astro';
import Logo from '../img/logotipo.png';
import Maquina from '../img/maquina.png';
import Maquina2 from '../img/maquina2.png';
import Ramen from '../img/ramen.png';
---


<Layout title="Boku no Coffee">
	<main>
		<section id="centro">
			<div class="logo">
				<img src={Logo.src} alt="logotipo">
			</div>
			<div class="botones">
				<div class="paginas">
					<a href=""><button>Productos</button></a>
					<a href=""><button>Servicios</button></a>
					<a href=""><button>Contacto</button></a>
				</div>
				<div class="login">
					<a href=""><button>Iniciar sesi√≥n</button></a>
					<a href=""><button>Registro</button></a>
				</div>
			</div>
		</section>
		<section id="izquierda">
			<img src={Maquina.src} alt="maquina">
			<img src={Ramen.src} alt="ramen">
			<img src={Maquina2.src} alt="maquina2">
		</section>
		<section id="derecha">
			<img src={Maquina.src} alt="maquina">
			<img src={Ramen.src} alt="ramen">
			<img src={Maquina2.src} alt="maquina2">
		</section>
	</main>
</Layout>

<style>

	@import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

	main{
		min-height: 100vh;
		max-width: 100%;
		position: relative;
	}

	#centro{
		display: flex;
		justify-content: center;
		flex-direction: column;
		position: absolute;
		left: 35%;
	}

	.logo img{
		width: 50%;
		animation: bote 2.5s infinite ease-out;
	}

	@keyframes bote {
		0%{
			translate: 0 -10px;
		}
		25%{
			translate: 0 -20px;
		}
		50%{
			translate: 0 -25px;
		}
		75%{
			translate: 0 -20px;
		}
		100%{
			translate: 0 -10px;
		}
	}

	.paginas{
		display: flex;
		justify-content: center;
		flex-direction: column;
		text-align: center;
		width: 50%;
		margin-left: 10%;
	}

	.paginas a{
		margin-top: 15px;
		width: 75%;
	}

	.paginas a button{
		background: transparent;
		border: none;
		color: #f08ae3;
		font-size: 50px;
		text-transform: uppercase;
		font-family: "Rajdhani", sans-serif;
		font-weight: bold;
	}

	.paginas a button:hover{
		animation: roll 1s ease-in;
		scale: 1.2;
		transition: scale 0.75s ease-out;
		cursor: pointer;
	}

	@keyframes roll{
		0%{
			filter: drop-shadow(1px 2px 2px aqua);
		}
		25%{
			filter: drop-shadow(1px 2px 2px #725fd1);
		}
		50%{
			filter: drop-shadow(1px 2px 2px violet);
		}
		75%{
			filter: drop-shadow(1px 2px 2px pink);
		}
		100%{
			filter: drop-shadow(1px 2px 2px #f8cc85);
		}
	}

	.login{
		text-align: center;
		margin-left: 3.5%;
		margin-top: 25px;
		width: 50%;
	}

	.login a button{
		background: linear-gradient(to bottom, #f08ae3, #5ac2a3 50%);
		border: none;
		border-radius: 15px;
		font-size: 20px;
		text-transform: uppercase;
		padding: 10px;
		width: 40%;
		font-family: "Rajdhani", sans-serif;
		font-weight: bold;
		margin-left: 5px;
	}

	.login a button:hover{

	}

	#derecha{
		transform: scaleX(-1); /* Para generar el efecto espejo */
		position: absolute;
	}
</style>