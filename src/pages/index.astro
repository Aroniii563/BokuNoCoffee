---
import Logo from '../img/logotipo.png';
import LayoutFooter from '../layouts/Layout-footer.astro';
---


<LayoutFooter title="Boku no Coffee">
	<main>
		<section id="centro">
			<div class="logo">
				<img src={Logo.src} alt="logotipo">
			</div>
			<div class="botones">
				<div class="paginas">
					<a href="/productos"><button>Productos</button></a>
					<a href="/servicios"><button>Servicios</button></a>
					<a href="/contacto"><button>Contacto</button></a>
				</div>
				<div class="login">
					<a href="/login"><button>Iniciar sesi√≥n</button></a>
					<a href="/register"><button id="register">Registro</button></a>
				</div>
			</div>
		</section>
	</main>
</LayoutFooter>

<style>

	@import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

	main{
		width: 100%;
		height: 92.5vh;
		position: relative;
	}

	#centro{
		width: 50%;
		display: flex;
		justify-content: center;
		flex-direction: column;
		position: fixed;
		left: 35%;
		top: -7%;
	}

	.logo img{
		width: 65%;
		animation: bote 2.5s infinite ease-out;
	}

	@keyframes bote {
		0%{
			translate: 0 -10px;
		}
		25%{
			translate: 0 -20px;
		}
		50%{
			translate: 0 -25px;
		}
		75%{
			translate: 0 -20px;
		}
		100%{
			translate: 0 -10px;
		}
	}

	.paginas{
		display: flex;
		justify-content: center;
		flex-direction: row;
		text-align: center;
		margin-right: 35%;
	}

	.paginas a{
		margin: 0 5% 2.5% 5%;
	}

	.paginas a button{
		background: transparent;
		border: none;
		color: #f08ae3;
		font-size: 50px;
		text-transform: uppercase;
		font-family: "Rajdhani", sans-serif;
		font-weight: bold;
	}

	.paginas a button:hover{
		animation: roll 1s ease-in infinite;
		scale: 1.2;
		transition: scale 0.75s ease-out;
		cursor: pointer;
	}

	@keyframes roll{
		0%{
			filter: drop-shadow(1px 2px 2px aqua);
		}
		25%{
			filter: drop-shadow(1px 2px 2px #725fd1);
		}
		50%{
			filter: drop-shadow(1px 2px 2px violet);
		}
		75%{
			filter: drop-shadow(1px 2px 2px pink);
		}
		100%{
			filter: drop-shadow(1px 2px 2px #f8cc85);
		}
	}

	.login{
		text-align: center;
		margin-left: 7%;
		margin-top: 25px;
		width: 50%;
	}

	.login a button{
		background: linear-gradient(to bottom, #f08ae3, #5ac2a3 50%);
		color: #fff;
		border: none;
		border-radius: 15px;
		font-size: 20px;
		text-transform: uppercase;
		padding: 10px;
		width: 40%;
		font-family: "Rajdhani", sans-serif;
		font-weight: bold;
		margin-left: 5px;
	}

	.login a button:hover{
		cursor: pointer;
		transition: all 0.5s ease-out;
	}

	.login a button:hover:first-child{
		scale: 1.2;
		margin-right: 20px;
	}

	.login a button:hover:last-child{
		scale: 1.2;
		margin-left: 20px;
	}

	@media (width < 1400px){
		.login a button{
			font-size: 15px;
		}
	}

	@media (width < 1200px){
		.login a button{
			font-size: 10px;
		}

		.paginas a button{
			font-size: 35px;
		}
	}

	@media (width < 1000px){
		#centro{
			top: 0;
			left: 10%;
		}

		.paginas{
			flex-direction: column;
		}

		.logo img{
			width: 150%;
			right: 30%;
		}

		.paginas a button{
			font-size: 75px;
			margin-left: 65%;
		}

		.login{
			position: relative;
			display: flex;
			justify-content: space-between;
			flex-direction: column;
			width: 80%;
			left: 50%;
		}

		.login a{
			width: 50%;
		}

		.login a button{
			font-size: 22px;
			width: 100%;
			padding: 7%;
		}

		.login a #register{
			position: relative;
			top: 15px;
		}
	}

	@media (width < 900px){
		#centro{
			left: 20%;
		}

		.logo img{
			width: 120%;
		}

		.paginas a button{
			margin-left: 30%;
		}

		.login{
			left: 35%;
		}
	}

	@media (width < 800px){
		#centro{
			left: 25%;
		}

		.logo img{
			width: 100%;
		}

		.paginas a button{
			font-size: 50px;
			margin-left: 35%;
		}

		.login{
			width: 50%;
			left: 30%;
		}

		.login a button{
			font-size: 15px;
			width: 120%;
			padding: 10%;
		}
	}

	@media (width < 500px){
		#centro{
			left: -5%;
		}

		.logo img{
			width: 200%;
		}

		.paginas a button{
			font-size: 40px;
			margin-left: 110%;
		}

		.login{
			width: 50%;
			left: 80%;
		}

		.login a button{
			font-size: 12.5px;
			width: 190%;
			padding: 15%;
		}
	}

	@media (width < 380px) and (height < 670px){
		#centro{
			left: 5%;
		}

		.logo img{
			width: 175%;
		}

		.paginas a button{
			font-size: 30px;
			margin-left: 90%;
		}

		.login{
			left: 65%;
		}

		.login a button{
			font-size: 12px;
		}
	}
</style>