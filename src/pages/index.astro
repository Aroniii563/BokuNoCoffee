---
import Layout from '../layouts/Layout.astro';
import Logo from '../img/logotipo.png';
import Maquina from '../img/maquina.png';
import Maquina2 from '../img/maquina2.png';
import Ramen from '../img/ramen.png';
---


<Layout title="Boku no Coffee">
	<main>
		<section id="centro">
			<div class="logo">
				<img src={Logo.src} alt="logotipo">
			</div>
			<div class="botones">
				<div class="paginas">
					<a href="/productos"><button>Productos</button></a>
					<a href="/servicios"><button>Servicios</button></a>
					<a href="/contacto"><button>Contacto</button></a>
				</div>
				<div class="login">
					<a href="/login"><button>Iniciar sesi√≥n</button></a>
					<a href="/register"><button>Registro</button></a>
				</div>
			</div>
		</section>
		<section id="izquierda">
			<img src={Maquina.src} alt="maquina">
			<img src={Ramen.src} alt="ramen">
			<img src={Maquina2.src} alt="maquina2">
		</section>
		<section id="derecha">
			<img src={Maquina.src} alt="maquina">
			<img src={Ramen.src} alt="ramen">
			<img src={Maquina2.src} alt="maquina2">
		</section>
	</main>
</Layout>

<style>

	@import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

	main{
		height: 100vh;
		max-height: 100%;
		width: 100%;
		position: relative;
	}

	#centro{
		display: flex;
		justify-content: center;
		flex-direction: column;
		position: fixed;
		left: 35%;
	}

	.logo img{
		width: 50%;
		animation: bote 2.5s infinite ease-out;
	}

	@keyframes bote {
		0%{
			translate: 0 -10px;
		}
		25%{
			translate: 0 -20px;
		}
		50%{
			translate: 0 -25px;
		}
		75%{
			translate: 0 -20px;
		}
		100%{
			translate: 0 -10px;
		}
	}

	.paginas{
		display: flex;
		justify-content: center;
		flex-direction: column;
		text-align: center;
		width: 50%;
		margin-left: 10%;
	}

	.paginas a{
		margin-top: 15px;
		width: 75%;
	}

	.paginas a button{
		background: transparent;
		border: none;
		color: #f08ae3;
		font-size: 50px;
		text-transform: uppercase;
		font-family: "Rajdhani", sans-serif;
		font-weight: bold;
	}

	.paginas a button:hover{
		animation: roll 1s ease-in;
		scale: 1.2;
		transition: scale 0.75s ease-out;
		cursor: pointer;
	}

	@keyframes roll{
		0%{
			filter: drop-shadow(1px 2px 2px aqua);
		}
		25%{
			filter: drop-shadow(1px 2px 2px #725fd1);
		}
		50%{
			filter: drop-shadow(1px 2px 2px violet);
		}
		75%{
			filter: drop-shadow(1px 2px 2px pink);
		}
		100%{
			filter: drop-shadow(1px 2px 2px #f8cc85);
		}
	}

	.login{
		text-align: center;
		margin-left: 3.5%;
		margin-top: 25px;
		width: 50%;
	}

	.login a button{
		background: linear-gradient(to bottom, #f08ae3, #5ac2a3 50%);
		color: #fff;
		border: none;
		border-radius: 15px;
		font-size: 20px;
		text-transform: uppercase;
		padding: 10px;
		width: 40%;
		font-family: "Rajdhani", sans-serif;
		font-weight: bold;
		margin-left: 5px;
	}

	.login a button:hover{
		cursor: pointer;
		transition: all 0.5s ease-out;
	}

	.login a button:hover:first-child{
		scale: 1.2;
		margin-right: 20px;
	}

	.login a button:hover:last-child{
		scale: 1.2;
		margin-left: 20px;
	}

	#izquierda{
		position: fixed;
		top: 100%;
		filter: hue-rotate(30deg);
	}

	#izquierda img:first-child{
		position: absolute;
		bottom: 200px;
		left: -100px;
		rotate: 10deg;
		scale: 1.2;
		z-index: 8;
	}

	#izquierda img:nth-child(2){
		position: absolute;
		bottom: 100px;
		left: -100px;
		rotate: 10deg;
		scale: 1.35;
		z-index: 10;
	}

	#izquierda img:nth-child(3){
		position: absolute;
		bottom: 300px;
		left: -270px;
		rotate: 15deg;
		scale: 1.5;
		z-index: 6;
	}

	#derecha{
		position: fixed;
		top: 100%;
		filter: hue-rotate(30deg);
		transform: scaleX(-1);
		margin-left: 1850px;
	}

	#derecha img:first-child{
		position: absolute;
		bottom: 200px;
		left: -100px;
		rotate: 10deg;
		scale: 1.2;
		z-index: 8;
	}

	#derecha img:nth-child(2){
		position: absolute;
		bottom: 100px;
		left: -100px;
		rotate: 10deg;
		scale: 1.35;
		z-index: 10;
	}

	#derecha img:nth-child(3){
		position: absolute;
		bottom: 300px;
		left: -270px;
		rotate: 15deg;
		scale: 1.5;
		z-index: 6;
	}

</style>