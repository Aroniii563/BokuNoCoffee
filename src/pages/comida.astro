---
import LayoutPag from "../layouts/Layout-pag.astro";
---

<LayoutPag title="Boku no Coffee | Comida">
    <main>
        <section id="selector">
            <a href="#bocadillos"><button>Bocadillos</button></a>
            <a href="#arroz"><button>Arroz</button></a>
            <a href="#ramen"><button>Ramen</button></a>
            <a href="#papas"><button>Papas</button></a>
        </section>
        <section id="body">
            <div class="bocadillos">
                <h1 id="bocadillos">Bocadillos:</h1>
                <div class="container">
                    <h2>Pollo especial</h2>
