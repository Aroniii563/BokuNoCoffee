                    <h2>Salsas y mechada grande</h2>
                    <p>Precio: 7.50€</p>
                    <img src="" alt="">
                </div>
            </div>
        </section>
    </main>
</LayoutPag>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

    main{
        width: 100%;
        height: 120vh;
        display: flex;
        flex-direction: row;
        font-family: "Rajdhani", sans-serif;
    }

    #selector{
        position: fixed;
        display: flex;
        justify-content: center;
        flex-direction: column;
        top: 35%;
        width: 25%;
    }

    #selector a button{
        width: 100%;
        background: linear-gradient(to bottom, #f08ae3, #5ac2a3 50%);
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 40px;
        font-weight: bold;
        text-transform: uppercase;
        font-family: "Rajdhani", sans-serif;
        padding: 20px;
    }

    #selector a{
        margin: 10px;
        width: 65%;
        transition: all 0.3s ease-out;
    }

    #selector a:hover{
        scale: 1.2;
        margin-left: 50px;
    }

    #body{
        display: flex;
        justify-content: end;
        width: 75%;
    }
</style>