---
import Layout from "../layouts/Layout.astro"
import Logo from "../img/logotipo.png"
---

<Layout title="404 not found">
    <main>
        <div id="error">
            <h1>404</h1>
            <p>NOT FOUND</p>
        </div>
        <img src={Logo.src} alt="logotipo">
    </main>
</Layout>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

    main{
        width: 100%;
        height: 98vh;
        display: flex;
        justify-content: center;
    }

    #error{
        width: 45%;
        position: relative;
        font-size: 120px;
		font-family: "Rajdhani", sans-serif;
        font-weight: bolder;
        animation: roll 2s ease-in infinite;
        display: flex;
        justify-content: center;
    }

    #error h1{
        font-size: 25vh;
        position: relative;
    }

    #error p{
        position: absolute;
        top: 40vh;
    }

	img{
		width: 40%;
		animation: bote 2.5s infinite ease-out;
        float: right;
	}

	@keyframes bote {
		0%{
			translate: 0 -10px;
		}
		25%{
			translate: 0 -20px;
		}
		50%{
			translate: 0 -25px;
		}
		75%{
			translate: 0 -20px;
		}
		100%{
			translate: 0 -10px;
		}
	}

    
	@keyframes roll{
		0%{
			filter: drop-shadow(1px 5px 2px aqua);
		}
		25%{
			filter: drop-shadow(1px 5px 2px #725fd1);
		}
		50%{
			filter: drop-shadow(1px 5px 2px violet);
		}
		75%{
			filter: drop-shadow(1px 5px 2px pink);
		}
		100%{
			filter: drop-shadow(1px 5px 2px #f8cc85);
		}
	}

    @media (width < 1200px){
        #error{
            font-size: 100px;
        }

        img{
            width: 35%;
            height: 70%;
        }

    }

    @media (width < 950px){
        #error{
            font-size: 80px;
        }

        #error h1{
            font-size: 20vh;
        }

        #error p{
            top: 25vh;
        }

        img{
            position: absolute;
            height: 40%;
            top: 45vh;
        }
    }

    @media (width < 750px){
        #error{
            font-size: 50px;
        }

        #error p{
            top: 30vh;
        }

        img{
            width: 45%;
            height: 45%;
        }
    }

    @media (width < 515px){
        #error{
            font-size: 40px;
        }

        img{
            width: 50%;
            height: 35%;
        }
    }
</style>